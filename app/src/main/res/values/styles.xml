<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@drawable/quizup_background</item>
        <item name="android:colorBackground">@drawable/quizup_background</item>
        <item name="android:actionButtonStyle">@style/customActionButtonStyle</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/QuizupBaseButtonStyle</item>
        <item name="android:actionBarStyle">@style/QuizupActionBarStyle</item>
    </style>

    <!-- theme used to inflate widgets and layouts destined for the action bar -->
    <style name="QuizupActionBarWidgetTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:dropDownListViewStyle">@style/QuizupDropDownListViewStyle</item>
        <item name="android:textColor">@drawable/action_bar_widget_textcolor</item>
    </style>

    <!-- style the items within the overflow menu -->
    <style name="QuizupDropDownListViewStyle" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:background">@color/white</item>
        <item name="android:listSelector">@drawable/action_bar_widget_listselector</item>
    </style>

    <style name="Quizup.NoTitle" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Quizup.NoActionBar" parent="Quizup.NoTitle">
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="Quizup.FullLogoActionBar" parent="AppTheme">
        <item name="android:icon">@drawable/action_bar_full_logo</item>
    </style>

    <style name="QuizupDropDownNav">
        <item name="android:background">@drawable/button_background_state_selector</item>
        <item name="android:dropDownSelector">@drawable/button_background_state_selector</item>
    </style>

    <style name="Quizup.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="QuizupActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/action_bar_background</item>
        <item name="android:titleTextStyle">@style/Quizup.TitleTextStyle</item>
    </style>

    <style name="CustomTabTextStyle" parent="@android:style/TextAppearance.Holo">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Splash Screen -->
    <style name="Theme.Splash" parent="android:Theme.NoTitleBar.Fullscreen">
        <item name="android:windowAnimationStyle">@style/Animations.SplashScreen</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:alertDialogTheme">@style/Theme.Splash.AlertDialogTheme</item>
    </style>

    <style name="Theme.Splash.AlertDialogTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Animations" parent="@android:Animation" />

    <style name="Animations.SplashScreen">
        <item name="android:windowEnterAnimation">@animator/appear</item>
        <item name="android:windowExitAnimation">@animator/disappear</item>
    </style>
    <!-- Splash Screen End -->


    <!-- Game Board Styles -->

    <style name="GameBoardCountdownTimeText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GameBoardPaginationText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="GameBoardQuestionText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/navy</item>
    </style>

    <style name="GameBoardSkipGlyph">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/navy</item>
    </style>

    <style name="GameBoardAnswerLetterText">
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <!-- Game Board Styles End -->

    <style name="QuizupBaseButtonStyle" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/button_background_state_selector</item>
        <item name="android:textColor">@drawable/button_background_state_selector</item>
    </style>

   <style name="QuizupButtonStyle" parent="QuizupBaseButtonStyle">
        <item name="android:height">48dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/navy</item>
    </style>

    <style name="ListHeaderStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/navy</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="QuizupListViewStyle" parent="android:Widget.ListView">
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <!-- item name="android:listSelector">@drawable/list_selector_background</item-->
    </style>

    <style name="customActionButtonStyle" parent="@android:style/Widget.ActionButton">
        <item name="android:background">@drawable/button_background_state_selector</item>
    </style>

      <style name="MainTitleText" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/navy</item>
        <item name="android:textColorHint">@color/navy</item>
        <item name="android:textColorLink">@color/navy</item>
        <item name="android:textSize">@dimen/subheading</item>
    </style>

    <style name="MainSubtitleText" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textColor">@color/navy</item>
        <item name="android:textColorHint">@color/navy</item>
        <item name="android:textColorLink">@color/navy</item>
        <item name="android:textSize">@dimen/subheading</item>
    </style>

    <!-- Settings Theme -->
    <style name="SettingsTheme" parent="AppTheme">
        <item name="android:textColor">@color/navy</item>
        <item name="android:textColorHint">@color/navy</item>
        <item name="android:textColorLink">@color/navy</item>
    </style>

    <style name="QuizupIconButton">
        <item name="android:background">@drawable/button_background_state_selector</item>
        <item name="android:layout_margin">1dp</item>
    </style>
</resources>
